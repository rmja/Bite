<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Title>Fast bit access</Title>
    <Authors>Rasmus Melchior Jacobsen</Authors>
    <Company />
    <Description>Fast BitReader, BitWriter, and BitView utilities using IBufferWriter and Span&lt;byte&gt;</Description>
    <PackageProjectUrl>https://github.com/rmja/Bite</PackageProjectUrl>
    <PackageTags>BitReader;BitWriter;BitView</PackageTags>
	<Version>1.2.0</Version>
	<PackageLicenseExpression>MIT</PackageLicenseExpression>
	<LangVersion>10</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="Bite.Tests" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Runtime.CompilerServices.Unsafe" Version="6.0.0" />
  </ItemGroup>

</Project>
